FROM python:3.11.13

WORKDIR /app

# Install uv and AWS CLI (with jq for JSON parsing)
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/
RUN apt-get update && apt-get install -y awscli jq && rm -rf /var/lib/apt/lists/*

# LAYER 1: Copy dependency files
COPY ../backend/pyproject.toml /app/pyproject.toml
COPY ../backend/uv.lock /app/uv.lock

# LAYER 2: Install dependencies using uv (layer invalidated if pyproject.toml or uv.lock changes)
RUN uv sync --frozen --no-cache

# LAYER 3: Copy everything else (invalidated on ANY code change, but doesn't affect above layers)
COPY ../backend/ /app/

EXPOSE 8000

# Fetch secrets at runtime and start the server
CMD ["/bin/bash", "-c", "\
    export AWS_SECRET_JSON=$(aws secretsmanager get-secret-value --secret-id neuralripper --region us-east-1 --query SecretString --output text) && \
    export RUNPOD_API_KEY=$(echo \"$AWS_SECRET_JSON\" | jq -r '.RUNPOD_API_KEY') && \
    export RUNPOD_ENDPOINT_QWEN=$(echo \"$AWS_SECRET_JSON\" | jq -r '.RUNPOD_ENDPOINT_QWEN') && \
    export MODAL_TOKEN_ID=$(echo \"$AWS_SECRET_JSON\" | jq -r '.MODAL_TOKEN_ID') && \
    export MODAL_TOKEN_SECRET=$(echo \"$AWS_SECRET_JSON\" | jq -r '.MODAL_TOKEN_SECRET') && \
    uv run uvicorn app.main:app --host 0.0.0.0 --port 8000\
"]